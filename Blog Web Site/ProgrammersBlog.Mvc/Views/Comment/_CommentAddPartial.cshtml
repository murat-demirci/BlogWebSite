@model ProgrammersBlog.Entities.Dtos.CommentAddDto
@using ProgrammersBlog.Entities.Dtos
<div class="card my-4" style="color: rgb(222 222 222);background-color:black">
        <h5 class="card-header" style="border:solid; text-align:center" >Yorum Yap</h5>
        <div class="card-body form-card" style="border:solid; text-align:center">
            <form asp-controller="Comment" asp-action="Add" method="post" id="form-comment-add">
                <input name="IsValid" type="hidden" value="@ViewData.ModelState.IsValid.ToString()" />
                <div asp-validation-summary="All" class="text-danger" id="validation-summary" aria-hidden="true" style="display: none;"></div>
                <input asp-for="ArticleId" type="hidden" />
                <div class="form-group">
                    <label asp-for="CreatedByName"></label>
                    <input type="text" asp-for="CreatedByName" placeholder="İsim" class="form-control" />
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="3" placeholder="Mesaj" asp-for="Text"></textarea>
                </div>
                <button type="button" class="btn btn-primary" id="btnSave">Gönder</button>
            </form>
        </div>
    </div>

