@model ProgrammersBlog.Mvc.Models.RightSideBarViewModel
@using ProgrammersBlog.Entities.Concrete
@using ProgrammersBlog.Mvc.Extensions
<div class="col-md-4 mt-5">

    <!-- Search Widget -->
    <div class="card my-4" style="background-color:transparent">
            <div class="card-body" style="margin-top:50px">
                <form asp-controller="Article" asp-action="Search" method="post">
                    <div class="input-group">
                        <input type="text" class="form-control" name="keyword" placeholder="Aranacak kelime...">
                        <span class="input-group-append">
                            <button class="btn btn-secondary" type="submit">Ara!</button>
                        </span>
                    </div>
                </form>
            </div>
        </div>
    <link href="~/BlogHome/css/categorywidget.css" rel="stylesheet" />
    <!-- Categories Widget -->
    <div class="row">
        <div class="col-lg-12">
            <div class="container-cont ex1">
                <div class="items">
                    <div class="items-head">
                        <p>KATEGORİLER</p>
                        <hr>
                    </div>
                    <div class="items-body">
                        <div class="items-body-content">
                            <a class="a-click" style="color:black; text-decoration:none" asp-controller="Home" asp-action="Index"><span>Tüm Kategoriler</span></a>
                            <i class="fa fa-angle-right"></i>
                        </div>

                    </div>
                    @foreach (var category in Model.Categories)
                    {
                        <div class="items-body">
                            <div class="items-body-content">
                                <a style="color: black; text-decoration: none" asp-controller="Home" asp-action="Index" asp-route-categoryId="@category.Id"><span>@category.Name</span></a>
                                <i class="fa fa-angle-right"></i>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
