@model ProgrammersBlog.Mvc.Areas.Admin.Models.DashboardViewModel    
 @{ 
        Layout = "_Layout";
        ViewBag.Title = "Yönetim Paneli";
    }
    @*<h1 class="mt-4">Dashboard</h1>*@
<div class="mt-3">
    <ol class="breadcrumb mb-3">
        <li class="breadcrumb-item "><a asp-area="Admin" asp-controller="Home" asp-action="Index">Admin</a></li>
        <li class="breadcrumb-item active"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Yönetim Paneli</a></li>
    </ol>
</div>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">Kategoriler (@Model.CategoriesSize)</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Category" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">Makaleler (@Model.ArticlesSize)</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Article" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">Yorumlar (@Model.CommentsSize)</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="Comment" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6">
            <div class="card bg-danger text-white mb-4">
                <div class="card-body">Kullanicilar (@Model.UsersSize)</div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" asp-area="Admin" asp-controller="User" asp-action="Index">Detaylar</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-area mr-1"></i>
                    En Cok Okunan Makaleler
                </div>
                <div class="card-body"><canvas id="viewCountChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar mr-1"></i>
                    Bar Chart Örengi
                </div>
                <div class="card-body"><canvas id="myBarChart" width="100%" height="40"></canvas></div>
            </div>
        </div>
    </div>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-table mr-1"></i>
            Son paylasilan makaleler
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="articlesTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kategori</th>
                            <th>Baslik</th>
                            <th>Resim</th>
                            <th>Tarih</th>
                            <th>Okunma Sayisi</th>
                            <th>Yorum Sayisi</th>
                            <th>Aktif mi</th>
                            <th>Silinmis mi</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>#</th>
                            <th>Kategori</th>
                            <th>Baslik</th>
                            <th>Resim</th>
                            <th>Tarih</th>
                            <th>Okunma Sayisi</th>
                            <th>Yorum Sayisi</th>
                            <th>Aktif mi</th>
                            <th>Silinmis mi</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        @foreach (var article in Model.Articles.Articles)
                        {
                        <tr>
                            <td>@article.Id</td>
                            <td>@article.Category.Name</td>
                            <td>@article.Title</td>
                            <td><img src="~/img/@article.Thumbnail" class="my-image-table" /></td>
                            <td>@article.Date.ToShortDateString()</td>
                            <td>@article.ViewCount</td>
                            <td>@article.CommentCount</td>
                            <td>@(article.IsActive ? "evet": "Hayir")</td>
                            <td>@(article.IsDeleted ? "evet": "Hayir")</td>
                        </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
@section Scripts{ 
    <script src="~/AdminLTE/js/HomeIndex.js" type="application/ecmascript"></script>
}
