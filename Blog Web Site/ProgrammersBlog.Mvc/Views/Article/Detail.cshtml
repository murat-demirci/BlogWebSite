@model ProgrammersBlog.Mvc.Models.ArticleDetailViewModel
@using ProgrammersBlog.Entities.Dtos
@{
    Layout = "_ArticleLayout";
    ViewBag.Title = Model.ArticleDto.Article.Title;
    ViewBag.Description = Model.ArticleDto.Article.SeoDescription;
    ViewBag.Author = Model.ArticleDto.Article.SeoAuthor;
    ViewBag.Tags = Model.ArticleDto.Article.SeoTags;
}
<link href="~/BlogHome/css/detail.css" rel="stylesheet" />
<link href="~/BlogHome/css/comment.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.6.3/css/all.css" integrity="sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/" crossorigin="anonymous">
<!-- Post Content Column -->

<div class="col-lg-8" style="background-color:transparent;">
    <h1 class="h1">
        MuratDemirciBlog
    </h1>
    <img class="profile" src="~/img/@Model.ArticleDto.Article.Thumbnail" />
    <h4 class="h4">
        <span class="meta-data"><i class="fa fa-book"></i> @Model.ArticleDto.Article.User.UserName | @Model.ArticleDto.Article.Date.ToShortDateString()</span>
    </h4>
    <h1 class="h1">
        @Model.ArticleDto.Article.Title
    </h1>
    <p class="p" style="color:white">
        @Html.Raw(Model.ArticleDto.Article.Content)
        <style>
            img {
                width: 350px;
                height: auto;
                image-rendering: optimizeSpeed;
            }
        </style>

    </p>
    <hr />




    <!-- Title -->
    <!--<h1  class="mt-4">@Model.ArticleDto.Article.Title</h1>-->
    <!-- Author -->
    <!--<p  class="lead">
        @Model.ArticleDto.Article.User.UserName | @Model.ArticleDto.Article.Date.ToShortDateString()
    </p>

    <hr>-->
    <!-- Preview Image -->
    <!--<div class="text-center">
        <img class="img-fluid rounded" src="~/img/@Model.ArticleDto.Article.Thumbnail" alt="@Model.ArticleDto.Article.Title">
    </div>
    <hr>-->
    <!-- Post Content -->
    <!--@Html.Raw(@Model.ArticleDto.Article.Content)


    <hr>-->
    <p class="text-center" style="color:white">Görüntülenme : <span class="badge badge-info" style="background-color:#808080"> @Model.ArticleDto.Article.ViewCount</span>  Yorum : <span class="badge badge-warning">@Model.ArticleDto.Article.CommentCount</span></p>
    <!-- Comments Form -->
    <partial name="~/Views/Comment/_CommentAddPartial.cshtml" model="new CommentAddDto { ArticleId=Model.ArticleDto.Article.Id}" />

    <div id="comments">
        <h1 class="comments-title">Yorumlar</h1>
        @foreach (var comment in Model.ArticleDto.Article.Comments)
        {
            <!-- Single Comment -->
            <!-- COMMENT 1 - START -->

            <div class="be-comment">
                <div class="be-img-comment">
                    <a href="blog-detail-2.html">
                        <img src="https://bootdey.com/img/Content/avatar/avatar1.png" alt="" class="be-ava-comment">
                    </a>
                </div>
                <div class="be-comment-content">

                    <span class="be-comment-name">
                        @comment.CreatedByName
                    </span>
                    <span class="be-comment-time">
                        <i class="fa fa-clock"></i>
                        @comment.CreatedDate.ToShortDateString() @comment.CreatedDate.ToShortTimeString()
                    </span>

                    <p class="be-comment-text">
                        @comment.Text
                    </p>
                </div>
            </div>
            <!-- COMMENT 1 - END -->


        }
    </div>
</div>
<partial name="_ArticleDetailRightSideBarPartial" model="@Model.ArticleDetailRightSideBarViewModel" />
@section Scripts{
    <script src="~/BlogHome/js/ArticleDetail.js" type="text/ecmascript"></script>
}
