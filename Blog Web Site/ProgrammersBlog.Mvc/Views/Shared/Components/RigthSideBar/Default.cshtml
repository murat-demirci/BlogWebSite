    <!-- Side Widget -->
    <div class="card my-4" style="background-color:transparent;">
        <h5 class="card-header" style="color:white;border-bottom-style:solid">En Çok Okunanlar</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @foreach (var article in Model.Articles)
                        {
                                <li class="list-group-item list-group-item-primary">
                                    <a href="/@Url.FriendlyUrlHelper(@article.Title)/@article.Id">@article.Title</a>
                                </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

