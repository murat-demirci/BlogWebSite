@model ProgrammersBlog.Mvc.Models.ArticleDetailRightSideBarViewModel
@using ProgrammersBlog.Mvc.Extensions
@using ProgrammersBlog.Entities.Concrete
@using ProgrammersBlog.Mvc.Models
<div class="col-md-4 mt-5" style="border-left-color: white; border-left-style: solid; border-left-width: 0.5px; height:auto; margin-top:30px;margin-bottom:58px">
    <link href="/BlogHome/css/borderstyle.css" rel="stylesheet" />
    <div class="card my-4" style="background-color: black; color; color: rgb(222 222 222); ">
        <img style="border-radius:70px" src="~/img/@Model.User.Picture" class="card-img-top text-center mt-1 mb-1 ml-2" alt="@Model.User.UserName" />

        <h5 class="card-header text-center" style="color: rgb(222 222 222);">@Model.User.UserName</h5>
        <div class="card-body">
            <div class="thing-thing">
                <h2 class="header-two">Yazar Hakkında</h2>
                <p>@Model.User.About</p>
                <div class="card-footer text-center">
                    <p>Sosyal Medya</p>
                    @if (Model.User.LinkedInLink != null)
                    {
                        <a href="@Model.User.LinkedInLink"><span class="fab fa-linkedin"></span></a>
                    }
                    @if (Model.User.GitHubLink != null)
                    {
                        <a href="@Model.User.GitHubLink"><span class="fab fa-github-square"></span></a>
                    }
                    @if (Model.User.TwitterLink != null)
                    {
                        <a href="@Model.User.TwitterLink"><span class="fab fa-twitter-square"></span></a>
                    }
                    @if (Model.User.FacebookLink != null)
                    {
                        <a href="@Model.User.FacebookLink"><span class="fab fa-facebook-square"></span></a>
                    }
                    @if (Model.User.InstagramLink != null)
                    {
                        <a href="@Model.User.InstagramLink"><span class="fab fa-instagram-square"></span></a>
                    }
                    @if (Model.User.YoutubeLink != null)
                    {
                        <a href="@Model.User.YoutubeLink"><span class="fab fa-youtube-square"></span></a>
                    }
                    @if (Model.User.WebsiteLink != null)
                    {
                        <a href="@Model.User.WebsiteLink"><span class="fas fa-home"></span></a>
                    }
                </div>
            </div>

        </div>
    </div>
    <!-- Side Widget -->
    <div class="card my-4" style="background-color:black;">
        <h5 class="card-header" style="color:white;border-bottom-style:solid">En Çok Okunanlar</h5>
        <div class="card-body">
            <div class="row">
                <div class="col-lg-12">
                    <ul class="list-group">
                        @for (var i=0 ; i <Model.ArticleListDto.Articles.Count;i++)
                        {
                            <li class="list-group-item list-group-item-primary">
                                <a href="/@Url.FriendlyUrlHelper(@Model.ArticleListDto.Articles[i].Title)/@Model.ArticleListDto.Articles[i].Id">@Model.ArticleListDto.Articles[i].Title</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>




